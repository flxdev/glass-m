extends _layout

block title
	title Index
	- var _name = "index"
	- var currentPage = "index"
block content
	.site__loader
	.root__wrapper
		.site__overlay
		.root__frame
			include includes/_header
			#barba-wrapper
				.barba-container(data-namespace="index")
					.wrapper-frame
						.block
							.row
								.columns
									.promo-slider.margin-out
										.promo-slider-wrap
											.promo-slider-inner.js-promoslider
												.promo-slider-item(data-href='/projects-inner.html')
													.promo-slider-item-inner.padding-out
														.cont-inner
															.cont-left
																.text Helsinger, Denmark
																.title.h1.white Danish
																	br 
																	|Maritime
																	br
																	|museum
														.promo-slider-item-img
															.img-wrap.js-image.bg(data-src='img/promoslider/slide2/2.jpg')
												.promo-slider-item(data-href='/projects-inner.html')
													.promo-slider-item-inner.padding-out
														.cont-inner
															.cont-left
																.text Minsk, Belarus
																.title.h1.white RRB
																	br 
																	|bank
														.promo-slider-item-img
															.img-wrap.js-image.bg(data-src='img/promoslider/slide1/1.jpg')
												.promo-slider-item(data-href='/projects-inner.html')
													.promo-slider-item-inner.padding-out
														.cont-inner
															.cont-left
																.text Dubai, United Arab Emirates
																.title.h1.white Opera 
																	br 
																	|House
														.promo-slider-item-img
															.img-wrap.js-image.bg(data-src='img/promoslider/slide5/5.jpg')
												.promo-slider-item(data-href='/projects-inner.html')
													.promo-slider-item-inner.padding-out
														.cont-inner
															.cont-left
																.text Saudi Arabia, Riyadh
																.title.h1.white skywalks
																	br 
																	|in kafd
														.promo-slider-item-img
															.img-wrap.js-image.bg(data-src='img/promoslider/slide4/4.jpg')
												.promo-slider-item(data-href='/projects-inner.html')
													.promo-slider-item-inner.padding-out
														.cont-inner
															.cont-left
																.text Latvia, Riga
																.title.h1.white Z-towers
														.promo-slider-item-img
															.img-wrap.js-image.bg(data-src='img/promoslider/slide3/3.jpg')
										a(href="#").btn.js-promo-link
											span Show project
										.dots-wrap
						.block.margin.anim-cont
							.row
								+content('About company','Since 2001, GLASSBEL is a leading glass processing company focusing on architectural and interior glass markets','Company','/production.html','img/index/index1.jpg','Company')
						.block.anim-cont.projects-outer
							.row
								.columns.margin-out
									.projects-wrap
										.projects-bgwrap
											.projects-bgwrap-inner.js-project-bg
												.projects-bgitem
													.projects-bgitem-inner.js-image.bg(data-src="img/next/l1.jpg")
												.projects-bgitem
													.projects-bgitem-inner.js-image.bg(data-src="img/index/index2.jpg")
												.projects-bgitem
													.projects-bgitem-inner.js-image.bg(data-src="img/index/index3.jpg")
												.projects-bgitem
													.projects-bgitem-inner.js-image.bg(data-src="img/next/l1.jpg")
												.projects-bgitem
													.projects-bgitem-inner.js-image.bg(data-src="img/index/index2.jpg")
