extends _layout

block title
	title Production
	- var _name = "Production"
	- var currentPage = "Production"
block content
	.site__loader
	.root__wrapper
		.site__overlay
		.root__frame
			include includes/_header	
			#barba-wrapper
				.barba-container(data-namespace="Production-inner",data-next-link='/production-inner.html',data-next-text='Edge Treatment: Grinding, Polishing, Bevelling',data-prev-link='/production-inner-test2.html',data-prev-text='Bevelling',data-cur-text='Edge Treatment')
					.wrapper-frame
						.block.page-head-block
							.row
								.columns.margin-out
									// модификатор head-big
									.page-head.head-big
										.block-bg
											.block-bg-inner(style='background-image: url(img/head/h3.jpg)')
										.page-head-inner
											.page-head-gradient
											.page-head-content
												.bread-cont
													a(href="/").bread-item Home
													a(href="#").bread-item Company
													a(href="/production.html").bread-item Production
												.title.h2.white Edge Treatment: Grinding, Polishing, Bevelling
						.block.margin
							.row
								.prod-eleminner
									.prod-eleminner-content.content
										.prod-eleminner-content-inner
											.text.primary 3300 mm x 7200 mm 129,9" x 283,5"
											hr
											.text.gray Features
											ul
												li Glasses Up To 19 mm
												li Cnc Decoating
												li Cutting Of Complex Shapes
												li Top Quality Decoating
												li Heat Treatment Of Magnetron, Pyrolytic, And Double Sided Coatings

										.prod-eleminner-images.margin-out
											img(src="img/index/index2.jpg", alt="")
											img(src="img/prodinner/prodinner.jpg", alt="")
											img(src="img/prodinner/prodinner2.jpg", alt="")
										+nextb('Back to Production','/production.html')


					include includes/_footer
					